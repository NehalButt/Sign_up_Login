<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/archivo_black"
        android:text="Discover new place"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Makes your design workflow easy and save your time with Prisma UI Kit"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/dots"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/background"
        android:backgroundTint="#4267B2"
        android:drawableLeft="@drawable/ic_icons8_facebook__1_"
        android:onClick="inten"
        android:paddingLeft="10dp"
        android:text="Connect with facebook"
        android:textColor="@color/white" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:text="Connect with twitter"
        android:drawableLeft="@drawable/ic_icons8_twitter__1_"
        android:layout_marginTop="10dp"
        android:background="@drawable/background"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#1DA1F2"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:text="Connect with google"
        android:drawableLeft="@drawable/ic_icons8_google_plus__1_"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#DB4437"
        android:background="@drawable/background"/>
</LinearLayout>

